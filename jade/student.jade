.fullpagecentercont
  header
    h1 {{classInfo.Name}}
  .stufaces
    .stuface(ng-click="answer(0)" ng-class="{'stufaceactive':currentAnswer.Answer==0}" ng-swipe-right="swipeAnswer(false)" ng-swipe-left="swipeAnswer(true)")
      include ../svg/ConfusedFace.svg
    .stuface(ng-click="answer(1)" ng-class="{'stufaceactive':currentAnswer.Answer==1}" ng-swipe-right="swipeAnswer(false)" ng-swipe-left="swipeAnswer(true)")
      include ../svg/BlankFace.svg
    .stuface(ng-click="answer(2)" ng-class="{'stufaceactive':currentAnswer.Answer==2}" ng-swipe-right="swipeAnswer(false)" ng-swipe-left="swipeAnswer(true)")
      include ../svg/HappyFace.svg
  .stufacesselect
    .stufacesselectbar(style="left: {{getLeft()}}%")
  h1 Understand O'Meter

p {{currentAnswer | json}}
